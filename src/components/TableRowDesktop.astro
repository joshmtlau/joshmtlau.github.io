---
import ExternalLinkIcon from "./ExternalLinkIcon.astro";

export interface Props {
  leftLabel?: string;
  leftSubtitle?: string;
  rightTitle: string;
  rightSubtitle?: string;
  image?: string;
  imageAlt?: string;
  isExternal: boolean;
  titleWithoutLastWord: string;
  lastWord: string;
}

const {
  leftLabel,
  leftSubtitle,
  rightTitle,
  rightSubtitle,
  image,
  imageAlt,
  isExternal,
  titleWithoutLastWord,
  lastWord,
} = Astro.props;
---

<td
  class="hidden md:table-cell md:w-1/6 pr-8 py-4 pl-4 rounded-l-lg border-t border-l border-b border-gray-300 md:border-0 group-hover:bg-columbia-blue ease-in-out transition duration-100"
>
  <div class="justify-left">
    {leftLabel && <div class="font-content my-0">{leftLabel}</div>}
    {leftSubtitle && <div class="text-jet-light">{leftSubtitle}</div>}
  </div>
</td>
<td
  class="hidden md:table-cell pr-8 py-4 pl-4 rounded-r-lg border-t border-r border-b border-gray-300 md:border-0 group-hover:bg-columbia-blue ease-in-out transition duration-100"
>
  <div class="hidden md:flex justify-between items-start gap-4">
    <div class="flex-1">
      <h1 class="font-emph my-0">
        {titleWithoutLastWord && <>{titleWithoutLastWord} </>}
        <span class="whitespace-nowrap">
          {lastWord}
          {isExternal && <ExternalLinkIcon />}
        </span>
      </h1>
      {rightSubtitle && <div class="text-jet-light">{rightSubtitle}</div>}
    </div>
    {
      image && (
        <div class="flex-shrink-0 mt-4 md:mt-0">
          <img
            src={image}
            alt={imageAlt || rightTitle}
            class="max-h-32 w-auto object-contain aspect-auto"
          />
        </div>
      )
    }
  </div>
</td>
